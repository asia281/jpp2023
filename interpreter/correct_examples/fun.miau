fun addToMap(lambda<(int)->int> map, int key, int val) -> lambda<(int)->int> {
    return (int i) -> int {
        if (i == key){
            return value;
        }
        else{
            return map(i);
        }
    };
}

lambda<(int)->int> m = (int i) -> int { return i; }

addToMap(m, 3, 4);
addToMap(m, 4, 5);
addToMap(m, 5, 6);

